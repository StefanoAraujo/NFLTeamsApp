<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NFLTeamsApp.Views.AboutPage"
             Title="About">
    
    <StackLayout>
        <Label Text="Information" Margin="20, 10, 10, 10"/>
        <StackLayout>
            <Label Text="NFL and the NFL shield design are registered trademarks of the National Football League." TextColor="{StaticResource Gray}" Margin="20, 10, 10, 0"/>
            <Label Text="The team names, logos and uniform designs are registered trademarks of the teams indicated." TextColor="{StaticResource Gray}" Margin="20, 10, 10, 0"/>
            <Label Text="All other NFL-related trademarks are trademarks of the National Football League." TextColor="{StaticResource Gray}" Margin="20, 10, 10, 0"/>
        </StackLayout>

        <Label Text="Version" Margin="20, 20, 10, 10"/>
        <StackLayout>
            <Label Text="{Binding Version}" TextColor="{StaticResource Gray}" Margin="20, 5, 10, 5"/>
        </StackLayout>
    </StackLayout>
</ContentPage>